@model List<Cooperatives.Models.ContributionModel>

@{
    ViewBag.Title = "All Contributions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4">All Contributions</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Amount</th>
                            <th>Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ev in Model)
                        {
                            <tr>
                                <td>@ev.Amount</td>
                                <td>@ev.Date.ToShortDateString()</td>
                                <td class="text-center">
                                    <a href="@Url.Action("EditEvent", "Home", new { eventId = ev.ContributionId })" class="btn btn-sm btn-primary">Edit</a>
                                    <a href="@Url.Action("DeleteEvent", "Home", new { eventId = ev.ContributionId })" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
