@using Cooperatives.Models
@model dynamic
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string profileComplete = Convert.ToString(Session["Email"]);

}
<div class="content container-fluid">
    <div class="row">

        <div class="alert alert-info alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>             
                    <strong>Welcome @Session["fullname"]</strong>@TempData["success"];
        </div>

        <div class="col-md-12">
            <div class="table-responsive">
                <table id="myAllAdvertisedVacancies" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Vacancy No</th>
                            <th>Job Title/Designation</th>
                            <th>Employment Type</th>
                            <th>Application Deadline</th>
                            <th>View</th>
                            <th>Apply</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
