@*@model Cooperatives.Models.ContributionModel*@

@{
    ViewBag.Title = "Contribution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Add these in the <head> section -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">

<!-- Add these before the closing </body> tag -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<div class="panel panel-body">
    <div class="card">
        <div class="row form-group">
        </div>

        @using (Html.BeginForm("CreatePayment", "Paypal", FormMethod.Post))
        {

            <div>
                @Html.Label("Description")
                @Html.TextBox("Description", null, new { required = "required" })
            </div>
            <div>
                @Html.Label("Price")
                @Html.TextBox("Price", null, new { required = "required" })
            </div>
            <div>
                @Html.Label("Tax")
                @Html.TextBox("Tax")
            </div>
            <div>
                @Html.Label("Shipping")
                @Html.TextBox("Shipping")
            </div>
            <button type="submit">Submit</button>     
            <div>
                @Html.ActionLink("Back to Dashboard", "Dashboard", "Home", null, new { @class = "btn btn-warning ladda-button fa fa-arrow-right" })
            </div>
        }
        </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });
        });
    </script>
}

<script type="text/javascript" src="~/assets/js/jquery-3.2.1.min.js"></script>

