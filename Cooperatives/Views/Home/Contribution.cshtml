@model Cooperatives.Models.ContributionModel

@{
    ViewBag.Title = "Contribution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Add these in the <head> section -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">

<!-- Add these before the closing </body> tag -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<div class="panel panel-body">
    <div class="card">
        <div class="row form-group">
        </div>
        @using (Html.BeginForm("Contribution", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="panel panel-primary">
            <div class="panel-heading">
                Contribution<div class="pull-right"><i class="fa fa-angle-left"></i>Step 1 of 2<i class="fa fa-angle-right"></i></div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-8" })
                        <div class="form-group">
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control floating" } })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-8" })
                        <div class="form-group">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="pull-right">
                    <button type="submit" class="btn btn-success ladda-button fa fa-arrow-right">Save</button> <!-- Use a button instead of ActionLink -->
                </div>
            </div>
        </div>
        }
    </div>
    <div>
        @Html.ActionLink("Back to Dashboard", "Dashboard", "Home", null, new { @class = "btn btn-warning ladda-button fa fa-arrow-right" })
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });
        });
    </script>
}

<script type="text/javascript" src="~/assets/js/jquery-3.2.1.min.js"></script>

